---
// IMPORTS ASTRO ATOMS
import HeadingTwo from "@/atoms/headings/two/index.astro"
import Paragraph from "@/atoms/paragraphs/large/index.astro"

const {

    CDN,
    data,
    PROJECT

} = Astro.props

---
<section class="bg-gray-50 px-4 md:px-0">
    <section class="grid md:grid-cols-2 gap-4">
        <section class="pb-4 md:pb-0 md:p-20 order-last md:order-none">
            <Paragraph>{ data.description }</Paragraph>
        </section>
        <section class="flex justify-end p-20 bg-zinc-200 w-full aspect-[3/2] bg-contain" style=`background-image: url(${ CDN + PROJECT + "/" + data.cover + "?quality=80" })`>
            <HeadingTwo>{ data.title }</HeadingTwo>
        </section>
    </section>
</section>

---
// IMPORTS ASTRO ATOMS
import HeadingFour from "@/atoms/headings/four/index.astro"

// IMPORTS CONTANTS
import { CDN_LINK, IMAGE_QUALITY } from "@/constants/images"

const {

    name,
    src,
    alt

} = Astro.props
---
<div class="border border-zinc-200 bg-gray-50 shadow overflow-hidden">
    <a href="/projects">
        <div class="w-full aspect-video bg-zinc-200 overflow-hidden">
            <img
                src={ CDN_LINK + src + "?quality=" + IMAGE_QUALITY }
                alt={ alt }
                class="w-full h-full object-cover"
            />
        </div>
    </a>
    <div class="p-4">
        <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
            <a href="/projects">
                <HeadingFour>{ name }</HeadingFour>
            </a>
        </div>
    </div>
</div>

---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "@/atoms/headings/two/index.astro"

// IMPORTS ASTRO COMPONENTS
import ClientLogo from "./client-logo/index.astro"

const {

    data,
    CDN_LINK,
    PROJECT

} = Astro.props

const images = data.images.sort( (a,b) => a.order - b.order )
---
<Container>
    <section class="space-y-4 md:space-y-6 pb-4 md:py-10">
        <HeadingTwo>{ data.title }</HeadingTwo>
        <section class="flex flex-col md:flex-row md:justify-center gap-4 md:gap-20">
            {

                images.map( ( value ) => {

                    return(
                        <ClientLogo
                            href=""
                            src={ value.file }
                            alt=""
                            CDN_LINK={ CDN_LINK }
                            PROJECT={ PROJECT }
                        />
                    )

                })

            }
        </section>
    </section>
</Container>

---
// IMPORTING ASTRO ATOMS
import Button from "../atom/Button.astro"

// IMPORTING JSX ATOMS
import AnnotateUnderline from "../atom/jsx/annotation/Underline"
import AnnotateCircle from "../atom/jsx/annotation/Circle"

// IMPORTING COMPONENTS
import InformationCard from "./InformationCard.astro"

const data = Array(1).fill({

    title: "For your business",
    description: "Our services are designed with the cutting edge technology.",

})
---
<section class="flex flex-col gap-10">
        <div>
            <span class="text-8xl font-medium font-abril">Making </span>
            <AnnotateUnderline client:load>
                <span class="text-8xl font-medium font-abril">web 2.0 </span>
            </AnnotateUnderline>
            <AnnotateCircle client:load>
                <span class="text-8xl font-medium font-abril">faster.</span>
            </AnnotateCircle>
        </div>
    <div class="space-y-2 pt-10">
        <Button href="" aria_label="get in touch" >Get in touch</Button>
        <p class="text-sm">Or email us at : <a href="mailto:contact@blupp.co"><span class="font-medium">contact@blupp.co</span></a></p>
    </div>
    <div class="pt-10">
        {

            data.map( ( value ) => {

                return(
                    <InformationCard
                        title={ value.title }
                        description={ value.description }
                    />
                )

            })

        }
    </div>
</section>

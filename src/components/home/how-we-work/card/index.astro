---
// IMPORTS ASTRO ATOMS
import HeadingThree from "@/atoms/headings/three/white/index.astro"
import HeadingFive from "@/atoms/headings/five/white/index.astro"
import Paragraph from "@/atoms/paragraphs/large/white/index.astro"

const {

    title,
    sub_title,
    description,
    index,
    bg_color

} = Astro.props
---
<div class={ bg_color + " space-y-6 p-10" }>
    <div class="w-16 h-16 bg-black/40 rounded-full flex justify-center items-center">
        <p class="text-white text-lg">{ index }</p>
    </div>
    <div class="h-20">
        <HeadingThree>{ title }</HeadingThree>
    </div>
    <HeadingFive>{ sub_title }</HeadingFive>
    <Paragraph>{ description }</Paragraph>
</div>

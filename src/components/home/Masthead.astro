---
// IMPORTING COMPONENTS
import FactCard from "./FactCard.astro"

const data = Array(1).fill({

    src: "/server.svg",
    alt: "",
    title: "Astro",
    description: "That's the recipe for our speed.",
    href: ""

})
---
<section class="grid grid-cols-1 gap-4 h-full">
    <a href="/" class="hidden md:flex items-start justify-start">
        <span class="text-[60px] text-white bg-black rounded-full w-1/2 aspect-square text-center flex justify-center items-center">&#120121;</span>
    </a>
    {

        false &&
        <div class="flex justify-center items-center">
            <a href="">
                <div class="p-12 bg-zinc-100 rounded-full w-fit hover:shadow-2xl">
                    <div class="w-24 aspect-square rounded-full">
                        <img
                            src="/blupp_favicon.svg"
                            alt=""
                            class="w-24 aspect-square"
                        />
                    </div>
                </div>
            </a>
        </div>

    }
    {

        data.map( ( value, index ) => {

            return(
                <FactCard
                    src={ value.src }
                    alt={ value.alt }
                    title={ value.title }
                    description={ value.description }
                    href={ value.href }
                    large={ index % 2 }
                />
            )

        })

    }
</section>

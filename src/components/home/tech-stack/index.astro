---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO COMPONENTS
import Technology from "./technology/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwo from "@/atoms/headings/two/index.astro"

const {

    CDN_LINK,
    data,
    PROJECT,
    tech_stack,

} = Astro.props

---
<section class="">
    <Container>
        <section class="space-y-4 md:space-y-10 pb-4 md:py-10">
            <HeadingTwo>{ data.title }</HeadingTwo>
            <section class="grid md:grid-cols-4 gap-x-10 gap-y-10">
                {

                    tech_stack.map( ( value ) => {

                        return(

                            value.display_on_home &&

                            <Technology
                                alt={ value.title }
                                CDN_LINK={ CDN_LINK }
                                description={ value.description }
                                PROJECT={ PROJECT }
                                src={ value.cover }
                                title={ value.title }
                            />
                        )

                    })

                }
            </section>
        </section>
    </Container>
</section>

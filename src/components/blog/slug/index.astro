---
// IMPORTS ASTRO LAYOUTS
import ContainerBlog from "@/layouts/container/blog/index.astro"

// IMPORTS ASTRO ATOMS
import Picture from "@/atoms/picture/index.astro"

// IMPORTS MARKED
import { marked } from "marked"

const {

    blog,
    CDN,
    data,
    PROJECT

} = Astro.props
---
<ContainerBlog>
    <section class="pt-32 md:pt-28 md:pb-10 overflow-hidden">
        <div class="h-96 bg-zinc-200">
            <Picture
                alt={ blog.title }
                src={ blog.cover }
                CDN={ CDN }
                PROJECT={ PROJECT }
            />
        </div>
        <div class="space-y-2 pt-6">
            <h1 class="text-2xl font-semibold">{ blog.title }</h1>
            <div class="flex flex-col md:flex-row gap-4 md:items-center">
                <div class="italic text-sm tracking-wider">{ blog.date }</div>
                <div class="flex flex-wrap gap-4 items-center">
                    {

                        blog.category.map( ( value ) => {

                            return(
                                <div class="text-sm font-medium tracking-wider px-2 py-1 rounded bg-slate-50 border">{ value }</div>
                            )

                        })

                    }
                </div>
            </div>
        </div>
        <article class="py-2 markdown" set:html={ data }/>
    </section>
</ContainerBlog>

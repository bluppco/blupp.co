---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import Link from "@/atoms/links/index.astro"
import HeadingOne from "@/atoms/headings/one/index.astro"

// IMPORTS ASTRO COMPONENTS
import BlogCard from '../blog-card/index.astro'

const { blog } = Astro.props
---
<section class="pt-32 md:pt-10 md:pb-10">
    <Container>
        <div>
            <HeadingOne>Blogs</HeadingOne>
        </div>
        <section class="grid grid-cols-1 md:grid-cols-3 gap-4 py-6">

            {

                blog.map( ( blog ) => {

                    return(
                            <Link href={ "/blog/" + blog.slug }>
                                <div class="h-full">
                                    <BlogCard
                                        image={ blog.cover }
                                        title={ blog.title }
                                        date={ blog.date }
                                    />
                                </div>
                            </Link>
                        )

                })

            }

        </section>
    </Container>
</section>

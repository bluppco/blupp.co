---
const { href, aria_label } = Astro.props
---
<div class="w-fit overflow-hidden relative group">
    <a href={ href } aria-label={ aria_label }>
        <button class={`text-white bg-black h-14 px-6 flex justify-center items-center border border-black w-full after:w-0 after:h-full after:bg-white after:text-white after:absolute after:left-0 after:top-0 after:z-30 hover:after:w-full after:transition-[width] after:duration-300 after:border after:border-black`}>
            <div class="z-40 relative group-hover:text-black duration-200 text-lg tracking-wider font-playfair">
                <slot />
            </div>
        </button>
    </a>
</div>

---
// IMPORTING COMPONENTS
import Header from "../components/header/HomeHeader.astro"
import Footer from "../components/Footer.astro"
import MetaTags from "../components/MetaTags.astro"
import Team from "../components/about/Team.astro"

// IMPORTING ATOMS
import H1 from "../components/atom/H1.astro"
import P from "../components/atom/P.astro"

// IMPORTING CONSTANTS
import { BASE_URL } from "../constants"
---

<html lang="en">
	<MetaTags
		title="About | Blupp Company"
		description="About Blupp Company"
		image="ttps://metatags.io/images/meta-tags.png"
		url={ BASE_URL + "about" }
	/>
	<body>
		<section class="min-h-screen flex flex-col">
			<!-- COMPONENT FOR HEADER -->
			<Header />

			<section class="container max-w-4xl lg:max-w-6xl mx-auto py-6 flex grow px-4 xl:px-0 flex-col">
				<H1
					text="About Blupp Company"
				/>
				<P
					text="I will write about our company and our vision on this page as I get time."
				/>
				<Team/>
			</section>
		</section>
		<!-- FOOTER -->
		<Footer />
	</body>
</html>

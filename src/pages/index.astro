---
// RUNTIME
const runtime = Astro.locals.runtime

// IMPORTS VARIABLE FROM .DEV.VARS FILE
const {

	CDN,
	ENDPOINT,
	PROJECT

} = runtime.env

// IMPORTS HOME API
import { homeAPI } from "@/api/home/index"
const data = await homeAPI()
const { home_data, work, projects, blogs, pricing, meta, stack } = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import Home from "@/components/home/index.astro"
---
<Layout
	CDN={ CDN }
	description={ meta.description }
	image={ meta.cover }
	PROJECT={ PROJECT }
	title={ meta.title }
>
	<Home
		blogs={ blogs }
		CDN={ CDN }
		home_data={ home_data }
		pricing={ pricing }
		PROJECT={ PROJECT }
		projects={ projects }
		stack={ stack }
		work={ work }
	/>
</Layout>
